<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="self"
            type="com.github.kr328.clash.design.BrowserDesign" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            
            <!-- Status bar placeholder -->
            <View
                android:id="@+id/statusBarPlaceholder"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@color/color_clash_dark" />


            <!-- WebView Container -->
            <FrameLayout
                android:id="@+id/webViewContainer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Bottom Navigation Bar -->
            <LinearLayout
                android:id="@+id/bottom_nav_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/color_clash_dark"
                android:padding="8dp">

                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/back"
                    android:padding="8dp"
                    android:src="@drawable/ic_baseline_arrow_back"
                    android:tint="@android:color/white" />

                <ImageButton
                    android:id="@+id/forwardButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/forward"
                    android:padding="8dp"
                    android:src="@drawable/ic_baseline_arrow_forward"
                    android:tint="@android:color/white" />

                <EditText
                    android:id="@+id/urlInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:hint="@string/enter_url"
                    android:imeOptions="actionGo"
                    android:inputType="textUri"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:background="@drawable/bg_url_input" />

                <ImageButton
                    android:id="@+id/reloadButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/reload"
                    android:padding="8dp"
                    android:src="@drawable/ic_baseline_refresh"
                    android:tint="@android:color/white" />

                <ImageButton
                    android:id="@+id/tabsCountButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/tabs_count"
                    android:padding="8dp"
                    android:src="@drawable/ic_baseline_view_list"
                    android:tint="@android:color/white" />

                <ImageButton
                    android:id="@+id/newTabButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/new_tab"
                    android:padding="8dp"
                    android:src="@drawable/ic_baseline_add"
                    android:tint="@android:color/white" />


                <ImageButton
                    android:id="@+id/menuButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/menu"
                    android:padding="8dp"
                    android:src="@drawable/ic_baseline_menu"
                    android:tint="@android:color/white" />

            </LinearLayout>

            <!-- Menu Popup (above bottom navigation) -->
            <LinearLayout
                android:id="@+id/menuPopup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="64dp"
                android:layout_marginEnd="8dp"
                android:background="@android:color/white"
                android:elevation="8dp"
                android:orientation="vertical"
                android:padding="8dp"
                android:visibility="gone">

                <Button
                    android:id="@+id/closeMenuButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="start|center_vertical"
                    android:padding="12dp"
                    android:text="@string/close"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black" />



                <Button
                    android:id="@+id/settingsMenuButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="start|center_vertical"
                    android:padding="12dp"
                    android:text="返回代理页面"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:indeterminate="true"
            android:visibility="gone" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
